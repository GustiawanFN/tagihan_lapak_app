<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LapakActivity">


    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="PASAR GALUH LURAGUNG"
                android:textSize="25sp"
                android:gravity="center"
                android:textStyle="bold"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Pasar Galuh Luragung adalah sebuah pasar yang bertempat di desa Luragung Landeuh Kecamatan Luragung Kabupaten Kuningan. Pasar Galuh Luragung sendiri dikelola sepenuhnya oleh pemerintahan desa Luragung Landeuh"
                android:textSize="20sp"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:textStyle="bold"/>




        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>